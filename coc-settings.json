{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "Markdown",
    "ts",
    "typescript",
    "tsx",
    "json",
    "javascript",
    "tsx",
    "jsx",
    "java",
    "go",
    "py",
    "graphql",
    "python"
  ],
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.signatureHelp.enabled": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  }
}
